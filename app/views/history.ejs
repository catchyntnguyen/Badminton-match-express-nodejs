
<%- include('header.ejs')%>
<section class="main__content p-3">
        <div class="content--header">
          <div class="m_c-headerAbove">
            <p id="currentDate"></p>
          </div>
          <div class="m_c-headerUnder">
            <div class="headerUnder-filter">Lọc theo</div>
            <ul>
              <li><a href="/history/filter_Match_Single">Đội thi đấu đơn</a></li>
              <li><a href="/history/filter_Match_Couple">Đội thi đấu đôi</a></li>
              <li>
                    <form style="display: flex;" action="/filterHistoryDay" method="get">
                          <input type="date" name="filterDate" id="filterDate">
                          <button type="submit">Tìm</button>
                    </form>
              </li>
        </ul>
          </div>
        </div>
        <div class=" w-full rounded" style="margin-top: 30px; background: #FFD771;padding: 12px 22px">
          <div class="w-full container-table">
            <table id="table" class="table hover:table-fixed w-full">
                <tr>
                    <th class="text-center">Mã đội</th>
                    <th>Hạn đội</th>
                    <th>Giờ - Ngày</th>
                    <th>Trạng thái</th>
                    <th>Tỉ số</th>
                    <th>Khác</th>
                </tr>
                <%for(let item of matches){%>
                    <tr class="td-table">
                        <td>#<%=item.id%></td>
                        <td><%=item.categoriesID == 1? "Đơn" : "Đôi"%></td>
                        <td><%=item.dateStart%></td>
                        <td><%=item.status == 1 ? "Sắp diễn ra" : item.status == 2 ? "Đang Diễn ra" : item.status == 3 ? "Hoàn Thành" : ""  %></td>
                        <td>
                          <div class="flex gap-2">
                            <span>1</span>
                            <span>|</span>
                            <span>2</span>
                          </div>
                        </td>
                        <td>
                            <a href="/history/<%=item.id%>" data-id="<%=item.id%>" class="linkdetail cursor-pointer">Xem thêm chi tiết</a>
                        </td>
                      </tr>
                    <%}%>
            </table>
          </div>
        </div>
      </section>
    </main>
